<h1>Register</h1>

<form action="/register" method="post">
    <div>
        <label for="name">Name: </label>
        <input type="text" id="name" name="name" required placeholder="Enter you name">
    </div>
    <br>
    <div>
        <label for="email">Email: </label>
        <input type="email" id="email" name="email" placeholder="Enter you e-mail">
    </div>
    <br>
    <div>
        <label for="password">password: </label>
        <input type="password" id="password" name="password" required placeholder="Enter you password">
        <button class="click" type="submit">Register</button>
        <a href="/login">Login</a> 
    </div> 
    <br>
</form> 


